<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:paddingTop="10dp"
    android:paddingBottom="10dp"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/avatar_post"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="@drawable/circular_ripple"
                android:padding="5dp"
                android:src="@drawable/profile_ic"
                app:civ_border_width="0dp" />
            <View
                android:id="@+id/support_circle_view"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/circle_hollow"
                android:padding="5dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:visibility="gone"/>
    </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/name_post"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?android:attr/selectableItemBackground"
                    android:clickable="true"
                    android:focusable="true"
                    android:fontFamily="@font/varela_round"
                    android:text="John Doe"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/options_icon_comment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginEnd="20dp"
                    android:background="@color/transparent"
                    android:src="@drawable/options_ic" />
            </RelativeLayout>

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/title_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/varela_round"
                android:text="CTO, HN CitiPages"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp"
                android:visibility="gone"/>
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/location_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/varela_round"
                android:text="Dhaka, Bangladesh"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp" />
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp">
        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/comment_post"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:layout_centerVertical="true"
            android:fontFamily="@font/varela_round"
            android:text="Wonderful comment"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/black"
            android:layout_toStartOf="@id/reply_button_comment"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"/>

        <androidx.constraintlayout.utils.widget.ImageFilterButton
            android:id="@+id/reply_button_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:background="@color/transparent"
            android:src="@drawable/reply_ic"
            android:tag="reply"
            android:visibility="invisible"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview_posts_replies"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="80dp"
        android:layout_marginEnd="10dp"
        android:clipToPadding="false"
        android:layout_marginTop="10dp"
        android:nestedScrollingEnabled="false"
        android:visibility="visible"/>

</LinearLayout>